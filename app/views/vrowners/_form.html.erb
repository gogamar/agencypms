
<%= simple_form_for(@vrowner) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%=  %>
    <%= f.input :fullname %>
    <%= f.input :address %>
    <%= f.input :document %>
    <%= f.input :account %>
    <%= f.input :language, priority: [ t(".ca"), "ca" ], collection: [ [t(".ca"), "ca"], [t(".es"), "es"], [t(".fr"), "fr"], [t(".en"), "en"] ], label_method: :first, value_method: :second %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
