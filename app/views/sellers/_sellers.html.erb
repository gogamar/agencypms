<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h4 class="font-weight-bold text-primary text-center mb-2">Venedors</h4>
    <hr>
    <div class="container d-flex justify-content-center mt-5">
      <%= form_with url: filter_sellers_path, method: :get, data: { turbo_frame: "sellers"}, class: "row g-3" do |form| %>
        <div class="col-auto">
          <%= form.select :language,
            options_for_select(
            [[t("ca"),'ca'],[t("en"),'en'],[t("es"),'es'],[t("fr"),'fr']],
            ),
            { include_blank: 'tots els idiomes' },
            class: "form-select"
          %>
        </div>
        <div class="col-auto">
          <%= form.text_field :fullname,
          placeholder: "Buscar per nom",
          class: "form-control bg-white border-0 small",
          autocomplete: "off" %>
        </div>
        <div class="col-auto">
          <%= form.button class: "btn btn-primary me-3" do %>
            <i class="fas fa-search fa-sm"></i>
          <% end %>
        </div>
        <div class="col-auto">
          <%= link_to "Veure tots els propietaris", sellers_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
      <%= turbo_frame_tag "sellers", class: "card-body" do %>
        <div class="container-fluid my-3">
          <div>
            <div class="row border border-top border-bottom fw-bold bg-light">
              <div class="col col-lg-2 py-3 border-start border-end" id="seller-fullname" relative>
                Nom i cognoms
              </div>
              <div class="col-lg-2 py-3 border-start border-end" id="seller-address" relative>
                Adreça
              </div>
              <div class="col-lg-2 py-3 border-start border-end" id="seller-phone" relative>
                Telèfon
              </div>
              <div class="col-lg-2 py-3 border-start border-end" id="seller-language" relative>
                Idioma
              </div>
              <div class="col-lg-2 py-3 border-start border-end">
                Més detalls
              </div>
              <div class="col-lg-2 py-3 border-start border-end">
                Modificar
              </div>
            </div>
          </div>
          <div class="tbody">
            <% @sellers.each do |seller| %>
              <div class="row border">
                <div class="col-lg-2 border-start border-end"><%= seller.fullname if seller.fullname %></div>
                <div class="col-lg-2 border-start border-end"><%= seller.address if seller.address %></div>
                <div class="col-lg-2 border-start border-end"><%= seller.phone if seller.phone %></div>
                <div class="col-lg-2 border-start border-end"><%= seller.language if seller.language %></div>
                <div class="col-lg-2 border-start border-end"><%= link_to 'Més detalls', seller %></div>
                <div class="col-lg-2 border-start border-end"><%= link_to 'Modificar', edit_seller_path(seller) %></div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      <% end %>
  </div>
</div>
