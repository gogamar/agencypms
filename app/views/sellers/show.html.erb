<div class="container">
  <div class="d-flex justify-content-between">
    <div>
      <%= link_to 'Modificar', edit_seller_path(@seller), class: "btn btn-secondary" %> <%= link_to 'Esborrar', @seller, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar #{@seller.fullname}?"} %>
    </div>
  </div>
  <div>
    <h4 class="mt-4 mb-3 font-weight-bold text-primary"><%= @seller.fullname %></h4>
  </div>
  <div class="card shadow mb-4 p-4">
    <p>
      <strong>Nom i cognoms:</strong>
      <%= @seller.fullname %>
    </p>
    <p>
      <strong>Idioma:</strong>
      <%= @seller.language %>
    </p>
    <p>
      <strong>Adreça:</strong>
      <%= @seller.address %>
    </p>
    <p>
      <strong>Telèfon:</strong>
      <%= @seller.phone %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @seller.email %>
    </p>
    <p>
      <strong>DNI:</strong>
      <%= @seller.document %>
    </p>
    <p>
      <strong>Compte bancari:</strong>
      <%= @seller.account %>
    </p>
    <p>
      <strong>Banc:</strong>
      <%= @seller.account_bank %>
    </p>
    <strong>Propietats:</strong>
    <% if @seller.realestates %>
      <% @seller.realestates.each do |realestate| %>
        <p><%= realestate.address %></p>
      <% end %>
    <% end %>
  </div>
</div>
