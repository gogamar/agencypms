<div
  class="modal fade"
  id="logout"
  tabindex="-1"
  role="dialog"
  aria-labelledby="logoutModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="logoutModalLabel"><%= t('want_log_out') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label=<%= t("close") %>>
        </button>
      </div>
      <div class="modal-body">
        <i class="fas fa-sign-out-alt me-2"></i><%= t('select_log_out') %>
      </div>
          <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal"><%= t('cancel') %></button>
            <%= button_to t('log_out'), destroy_user_session_path, method: :delete, data: {turbo_method: :delete}, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
