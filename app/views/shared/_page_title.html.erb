<div class="page-title">
  <div class="container">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-2">
      <div>
        <h2 class="ipt-title"><%= title %></h2>
        <span class="ipn-subtitle"><%= subtitle %></span>
      </div>
      <div>
        <% if @vrental.present? && @vrental.persisted? %>
          <%= link_to book_property_path(vrental_id: @vrental.id), target: '_blank', class: "ipn-subtitle me-5 pe-3" do %>
            <i class="fa-solid fa-house-signal me-2"></i><%= t('view_on_website', property: @vrental.name) %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
