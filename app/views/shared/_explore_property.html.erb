<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-md-10 text-center">
        <div class="sec-heading center">
          <h2>Explore Good places</h2>
          <p>At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores</p>
        </div>
      </div>
    </div>
    <div class="row">
      <% @featured_vrentals.each do |vrental| %>
        <!-- Single Property -->
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="property-listing property-2">
            <div class="listing-img-wrapper">
              <div class="list-img-slide">
                <div class="click">
                  <% if vrental.image_urls.present? %>
                    <% vrental.image_urls.order(position: :asc).each do |image| %>
                      <%= link_to vrental do %>
                        <div>
                          <%= image_tag image.url, class: "img-fluid mx-auto", alt: vrental.name %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="listing-detail-wrapper">
              <div class="listing-short-detail-wrap">
                <div class="listing-short-detail">
                  <span class="property-type"><%= t(vrental.property_type) %></span>
                  <h4 class="listing-name verified">
                    <%= link_to vrental.name, vrental, class: "prt-link-detail" %>
                  </h4>
                </div>
                <div class="listing-short-detail-flex">
                  <% lowest_price = vrental.rates.present? ? vrental.rates.minimum(:priceweek) : vrental.min_price * 7 %>
                  <h6 class="listing-card-info-price"><%= number_to_currency(lowest_price, unit: "â‚¬", separator: ",", delimiter: ".", precision: 2).delete(' ') %></h6>
                  <span class="property-type"><%= t("week") %></span>
                </div>
              </div>
            </div>
            <div class="price-features-wrapper">
              <div class="list-fx-features">
                <div class="listing-card-info-icon">
                  <div class="inc-fleat-icon"><%= image_tag("bed.svg", width: "13", alt: "") %></div>
                  3 Beds
                </div>
                <div class="listing-card-info-icon">
                  <div class="inc-fleat-icon"><%= image_tag("bathtub.svg", width: "13", alt: "") %></div>
                  1 Bath
                </div>
                <div class="listing-card-info-icon">
                  <div class="inc-fleat-icon"><%= image_tag("move.svg", width: "13", alt: "") %></div>
                  800 sqft
                </div>
              </div>
            </div>
            <div class="listing-detail-footer">
              <div class="footer-first">
                <div class="foot-location"><%= image_tag("pin.svg", width: "18", alt: "") %>210 Zirak Road, Canada</div>
              </div>
              <div class="footer-flex">
                <a href="property-detail.html" class="prt-view">View</a>
              </div>
            </div>
          </div>
        </div>
        <!-- End Single Property -->
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <a href="listings-list-with-sidebar.html" class="btn btn-theme-light-2 rounded">Browse More Properties</a>
      </div>
    </div>
  </div>
</section>
