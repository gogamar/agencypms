<!-- Sidebar -->
<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion"
    id="accordionSidebar"
    data-sidebar-target="bar"
>
  <!-- Sidebar - Brand -->
  <% if profile_logged_in? %>
    <%= link_to "#", class: "sidebar-brand d-flex align-items-center justify-content-center bg-light" do %>
      <% if current_profile.photo.attached? %>
        <%= cl_image_tag(current_profile.photo.key,
          class: "img-fluid",
          :transformation => { dpr: "auto",
          responsive: :true,
          width: :auto,
          crop: :scale }) %>
      <% else %>
        <p>Aquest perfil no té logo adjuntat.</p>
      <% end %>
    <% end %>
    <!-- Divider -->
    <hr class="sidebar-divider my-0">
    <!-- Nav Item - Dashboard -->
    <li class="nav-item active">
      <a class="nav-link" href="/">
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span>Control de panel</span>
      </a>
    </li>
    <li class="nav-item active">
      <%= link_to new_profile_session_path, class: "nav-link" do %>
        <i class="fas fa-fw fa-user"></i>
          <span>Canvia de perfil</span>
      <% end %>
    </li>
    <!-- Divider -->
    <hr class="sidebar-divider">
    <% if current_profile.companytype == "Immobiliària" %>
    <!-- Heading -->
    <div class="sidebar-heading">
        <%= current_profile.companytype %>
    </div>
    <!-- Nav Item - Lloguer Anual Collapse Menu -->
    <li class="nav-item">
      <%= link_to "#", class: "nav-link collapsed", data: { toggle: "collapse", target: "#collapseTwo" }, 'aria-expanded': true, 'aria-controls': "collapseTwo" do %>
        <i class="fas fa-fw fa-key"></i>
          <span>Lloguer anual</span>
      <% end %>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar" data-sidebar-target="coll">
        <div class="bg-white py-2 collapse-inner rounded">
          <%= link_to "Immobles", rentals_path, class: "collapse-item" %>
          <%= link_to "Propietaris", owners_path, class: "collapse-item" %>
          <%= link_to "Inquilins", renters_path, class: "collapse-item" %>
          <%= link_to "Contractes", agreements_path, class: "collapse-item" %>
          <%= link_to "Models de contracte", rentaltemplates_path, class: "collapse-item" %>
        </div>
      </div>
    </li>
    <hr class="sidebar-divider">
    <!-- Nav Item - Compravenda Collapse Menu -->
    <li class="nav-item">
      <%= link_to "#", class: "nav-link collapsed", data: { toggle: "collapse", target: "#collapseTwo" }, 'aria-expanded': true, 'aria-controls': "collapseTwo" do %>
        <i class="fas fa-fw fa-house"></i>
          <span>Compravenda</span>
      <% end %>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar" data-sidebar-target="coll">
        <div class="bg-white py-2 collapse-inner rounded">
          <%= link_to "Immobles", "#", class: "collapse-item" %>
          <%= link_to "Vendedors", "#", class: "collapse-item" %>
          <%= link_to "Compradors", "#", class: "collapse-item" %>
          <%= link_to "Contractes", "#", class: "collapse-item" %>
          <%= link_to "Models de contracte", rentaltemplates_path, class: "collapse-item" %>
        </div>
      </div>
    </li>
    <% else %>
    <!-- Heading -->
    <div class="sidebar-heading">
      <%= current_profile.companytype %>
    </div>
    <!-- Nav Item - Lloguer Turístic Collapse Menu -->
    <li class="nav-item">
      <%= link_to "#", class: "nav-link collapsed", data: { toggle: "collapse", target: "#collapseTwo" }, 'aria-expanded': true, 'aria-controls': "collapseTwo" do %>
        <i class="fas fa-fw fa-house"></i>
          <span>Lloguer turístic</span>
      <% end %>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar" data-sidebar-target="coll">
        <div class="bg-white py-2 collapse-inner rounded">
          <%= link_to "Immobles", vrentals_path, class: "collapse-item" %>
          <%= link_to "Propietaris", vrowners_path, class: "collapse-item" %>
          <%= link_to "Models de contracte", vrentaltemplates_path, class: "collapse-item" %>
