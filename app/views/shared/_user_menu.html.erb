<% if user_signed_in? %>
  <div class="btn-group account-drop">
    <button type="button" class="btn btn-order-by-filt dropdown-toggle" id="showbutton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag(current_user.photo.key, class: "avatar-img") %>
      <% else %>
        <i class="fa-solid fa-gear me-2"></i>
      <% end %>
      <span class="d-none d-lg-flex"><%= current_user.email %></span>
    </button>
    <div class="dropdown-menu pull-right animated flipInX" id="showing">
      <% if current_user.admin? || current_user.manager? || (current_user.owner.present? && current_user.owner.vrentals.any?) %>
        <%= link_to vrentals_path do %>
          <i class="fa-solid fa-house-circle-check me-2"></i><%= t("vrentals") %>
        <% end %>
      <% else %>
        <%= link_to new_vrental_path, class: "text-success" do %>
          <i class="fa-solid fa-house-circle-check me-2"></i><%= t("add_property") %>
        <% end %>
      <% end %>
      <% if current_user.admin? %>
        <%= link_to dashboard_path do %>
          <i class="fa-solid fa-chart-line me-2"></i><%= t("dashboard") %>
        <% end %>
        <% unless controller.controller_name == 'companies' %>
          <% link_to edit_company_path(@company) do %>
            <i class="fa-solid fa-house-laptop me-2"></i><%= t('company') %>
          <% end %>
          <%= link_to company_offices_path(@company) do %>
            <i class="fa-solid fa-briefcase me-2"></i><%= t('offices') %>
          <% end %>
        <% end %>
        <%= link_to users_path do %>
          <i class="fa-solid fa-user me-2"></i><%= t('authorize_users') %>
        <% end %>
      <% end %>
      <%= link_to edit_user_registration_path do %>
        <i class="fa-solid fa-address-card me-2"></i><%= t("edit_profile") %>
      <% end %>
      <!--<a href="#"><i class="fa-solid fa-bookmark"></i>Bookmarked Listings</a>
                  <a href="#"><i class="fa-solid fa-unlock"></i>Change Password</a>-->
      <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#logout">
        <i class="fa-solid fa-arrow-right-from-bracket me-2"></i><%= t("sign_out") %>
      </a>
    </div>
  </div>
<% else %>
  <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#login">
    <i class="fa-solid fa-arrow-right-from-bracket me-2"></i><%= t("sign_in") %>
  </a>
<% end %>
