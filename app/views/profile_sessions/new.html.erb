<div class="container-fluid p-5">
  <% if current_user.profiles.present? %>
  <h3 class="text-center text-secondary">Entra amb un dels teus perfils o crea un perfil nou</h3>
  <div class="d-flex justify-content-around pt-5">
    <% @profiles.each do |profile| %>
        <%# CARD %>
        <div class="card d-flex flex-column justify-content-center align-items-center">
          <%# IMAGE %>
          <div>
            <% if profile.photo.attached? %>
            <%= cl_image_tag profile.photo.key, height: 70, width: 200, crop: :pad %>
            <% else %>
            <p>Aquest perfil no té logo adjuntat.</p>
            <% end %>
          </div>
          <%# BODY %>
          <div class="card-body">
            <div class="p-2">
              <%= form_with(url: profile_sessions_path , scope: :profile_session, local: true) do |f| %>
              <%= hidden_field_tag "profile_id", profile.id %>
              <%= f.submit "Entrar com #{profile.businessname}", class: "btn btn-confirm" %>
              <% end %>
            </div>
            <p>
              Nom social : <%= profile.businessname %><br>
              Empresa : <%= profile.companyname %><br>
              Adreça : <%= profile.address %><br>
              CIF : <%= profile.vat %>
              </p>
            <div class="text-center pt-4">
              <p><%= link_to 'Modificar el perfil', edit_profile_path(profile) %></p>
              <p><%= link_to 'Eliminar el perfil', profile, data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar aquest perfil?"} %></p>
            </div>
          </div>
        </div>
    <% end %>
  <% else %>
    <%# <h3 class="text-center text-secondary">Crea un perfil nou</h3> %>
    <%= redirect_to t(".profile"), new_profile_path, class: 'btn btn-confirm' %>
  <% end %>
  </div>
</div>
