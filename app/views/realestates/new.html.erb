
<div>
  <%= link_to realestates_path, class: "btn btn-light btn-icon-split me-3" do %>
    <span class="icon text-white-600">
        <i class="fas fa-arrow-left"></i>
    </span>
    <span class="text m-0 text-primary" style="font-size: 0.85rem">
      Tornar
    </span>
  <% end %>
</div>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h4 class="font-weight-bold text-primary text-center mb-2">Afegir un immoble nou o <%= link_to "copiar un immoble existent", realestates_path %></h4>
    <hr>
    <div class="container d-flex justify-content-center mt-5 w-75 pb-5">
      <%= render 'form', realestate: @realestate %>
    </div>
  </div>
</div>
