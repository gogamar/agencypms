<%= simple_form_for [realestate] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :status, as: :radio_buttons, collection: [[t("inactive"),'inactive'],[t("pending"),'pending'],[t("signed"),'signed']] %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :cadastre %>
    <%= f.input :habitability %>
    <%= f.input :hab_date, as: :date, start_year: Date.today.year - 100,
                              end_year: Date.today.year %>
    <%= f.input :energy %>
    <%= f.input :registrar %>
    <%= f.input :registry_code %>
    <%= f.input :volume %>
    <%= f.input :book %>
    <%= f.input :sheet %>
    <%= f.input :registry %>
    <%= f.input :entry, hint: "Per exemple: Inscripció 2ª amb data 26/04/1989" %>
    <%= f.input :protocol %>
    <%= f.input :deed_date %>
    <%= f.input :notary %>
    <%= f.input :notary_fullname %>
    <%= f.input :mortgage_bank %>
    <%= f.input :mortgage_amount %>
    <%= f.input :charges, as: :text, :input_html => { class: 'test', :cols => 5, :rows => 5 } %>
    <%= f.input :charges_screenshot, label: 'Afegir càrregues com pantallazo', as: :file %>
    <%= f.input :description, as: :text, :input_html => { class: 'test', :cols => 5, :rows => 5 }, hint: "Per exemple: El pis d'uns 55m2 útils aproximats consta de 2 habitacions dobles, una cuina independent, menjador sala d'estar amb sortida a terrassa i un lavabo." %>
     <%= f.input :description_screenshot, label: 'Afegir descripció registral com pantallazo', as: :file %>
  <div class="d-flex justify-content-between align-items-center">
      <div class="w-50 me-3">
      <%= f.association :seller, label_method: :fullname %>
      </div>
      <div class="w-50">
      o <%= link_to 'Afegir un venedor nou', new_seller_path, target: "_blank" %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, t('global.forms.submit'), class: 'btn-primary' %>
  </div>
<% end %>
