<p id="notice"><%= notice %></p>

<h1>Models de contracte</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Plantilla</th>
      <th scope="col">Més detalls</th>
      <th scope="col">Modificar</th>
      <th scope="col">Esborrar</th>
    </tr>
  </thead>
  <tbody>
    <% @rentaltemplates.each_with_index do |rentaltemplate, index| %>
        <tr>
        <th scope="row"> <%= index + 1 %></th>
        <td><%= rentaltemplate.title %></td>
        <td><%= link_to 'Més detalls', rentaltemplate %></td>
        <td><%= link_to 'Modificar', edit_rentaltemplate_path(rentaltemplate) %></td>
        <td><%= link_to 'Esborrar', rentaltemplate, method: :delete, form: { data: { turbo_confirm: 'Segur que vols esborrar?' }} %></td>
      </tr>
    <% end %>
    </tbody>
</table>

<%= link_to 'Afegir un model de contracte nou', new_rentaltemplate_path %>
