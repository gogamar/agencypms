<div class="container d-flex justify-content-between">
  <% if @vrental && @vrental.bookings.present? %>
    <div class="flex-column">
      <p>Comissió: <%= number_to_percentage(@vrental.commission.to_f*100, precision: 2) %></p>
      <p>Ingressos segons contracte (menys les reserves propietari) <%= number_to_currency(@vrental.total_rate_price, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u").delete(' ') if @vrental.total_rate_price %></p>
      <p>Ingressos segons reserves <%= number_to_currency(@vrental.total_bookings, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u").delete(' ') if @vrental.total_bookings %></p>
      <p>Ingressos segons liquidacions <%= number_to_currency(@vrental.total_earnings, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u") %></p>
      <p>Diferencia imports reserves i liquidacions: <%= number_to_currency((@vrental.total_bookings - @vrental.total_earnings).abs, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u") if @vrental.total_earnings %> <%= rental_balance_message(@vrental) %></p>
      <%= link_to request.original_url, class: "text-muted" do %>
        <i class="fa-solid fa-redo me-1"></i>Refrescar la pàgina
      <% end %>
    </div>
    <div class="d-flex flex-column align-items-end">
      <% if @vrental.rates.where("DATE_PART('year', firstnight) = ?", Date.today.year).exists? %>
        <%= link_to get_bookings_vrental_path(@vrental), class: "text-muted-2" do %>
          <i class="fa-solid fa-file-import me-1"></i>Importar reserves des de Beds
        <% end %>
      <% else %>
        <small>
          <div class="alert alert-warning position-relative" role="alert">
            Per importar reserves, primer has de importar tarifes del <%= Date.today.year %>
          </div>
        </small>
        <%= link_to get_rates_vrental_path(@vrental), class: "text-muted-2" do %>
          <i class="fa-solid fa-file-import me-1"></i>Importar tarifes des de Beds
        <% end %>
      <% end %>
      <!--
      <%= link_to new_vrental_earning_path(@vrental), class: "btn btn-light btn-icon-split" do %>
        <span class="icon text-white-600">
          <i class="fas fa-plus fa-sm"></i>
        </span>
        <span class="text">
          Nou ingres <%= @vrental.name %>
        </span>
      <% end %>
      -->
    </div>
  <% end %>
</div>
<% if @earnings.present? %>
  <div id="earnings" class="container mt-5">
    <hr>
    <div class="row">
      <div class="col-lg-2 fw-bold nowrap">Descripció</div>
      <div class="col-lg-2 fw-bold nowrap">Segons contracte</div>
      <div class="col-lg-2 fw-bold nowrap">Reserva</div>
      <div class="col-lg-2 fw-bold nowrap">Descompte</div>
      <div class="col-lg-2 fw-bold nowrap">Liquidació</div>
      <div class="col-lg-2 fw-bold nowrap"></div>
    </div>
    <hr>
    <%= render @earnings %>
  </div>
<% end %>
