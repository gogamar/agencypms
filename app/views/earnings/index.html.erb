<div class="container">
  <hr>
  <div class="d-flex justify-content-between align-items-baseline">
    <div class="d-flex justify-content-around align-items-baseline">
      <h4 class="text-info text-center pe-3">Ingressos</h4>
      <% if @earnings.present? %>
        <h6 class="text-center">Total: <%= number_to_currency(@total_earnings, unit: "€", separator: ",", delimiter: ".", precision: 2) %></h6>
      <% end %>
    </div>
    <div>
      <% if @vrental %>
        <%= link_to new_vrental_earning_path(@vrental), class: "btn btn-primary me-2" do %>
          <i class="fas fa-plus fa-sm"></i>
          <span class="text">Nou ingres <%= @vrental.name %></span>
        <% end %>
      <% end %>
      <%= link_to get_bookings_vrental_path(@vrental), class: "btn btn-secondary" do %>
        <i class="fas fa-file-import"></i> Importar reserves des de Beds
      <% end %>
    </div>
  </div>
  <% if @earnings.present? %>
    <hr>
    <div id="earnings">
      <div class="row">
        <div class="col-lg-2 fw-bold nowrap">Descripció</div>
        <div class="col-lg-2 fw-bold nowrap">Segons contracte</div>
        <div class="col-lg-2 fw-bold nowrap">Reserva</div>
        <div class="col-lg-2 fw-bold nowrap">Descompte</div>
        <div class="col-lg-2 fw-bold nowrap">Liquidació</div>
        <div class="col-lg-2 fw-bold nowrap"></div>
      </div>
      <hr>
      <%= render @earnings %>
    </div>
  <% end %>
</div>
