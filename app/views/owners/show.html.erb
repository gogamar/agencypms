<div class="container">
  <div class="d-flex justify-content-between gap-3">
    <div>
      <%= link_to t('edit'), edit_owner_path(@owner), class: "btn btn-sm btn-secondary" %>
      <% if current_user.admin? || current_user.manager? %>
        <%= link_to t('grant_access'), grant_access_owner_path(@owner), class: "btn btn-sm btn-success" %>
        <%= link_to t('delete'), @owner, class: "btn btn-sm btn-danger", data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar #{@owner.fullname}?"} %>
      <% end %>
    </div>
  </div>
  <div>
    <h4 class="mt-4 mb-3 font-weight-bold text-primary"><%= @owner.fullname %></h4>
  </div>
  <div class="card shadow mb-4 p-4">
    <p>
      <strong>Nom i cognoms:</strong>
      <%= @owner.fullname %>
    </p>
    <p>
      <strong>Idioma:</strong>
      <%= @owner.language %>
    </p>
    <p>
      <strong>Adreça:</strong>
      <%= @owner.address %>
    </p>
    <p>
      <strong>Telèfon:</strong>
      <%= @owner.phone %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @owner.email %>
    </p>
    <p>
      <strong>DNI:</strong>
      <%= @owner.document %>
    </p>
    <p>
      <strong>Compte bancari:</strong>
      <%= @owner.account %>
    </p>
    <strong>Propietats:</strong>
    <% @owner.vrentals.each do |vrental| %>
      <p><%= vrental.name %></p>
    <% end %>
  </div>
</div>
