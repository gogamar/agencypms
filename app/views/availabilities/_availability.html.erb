<%= turbo_frame_tag availability, class: "card-body" do %>
  <div class="row border-bottom">
    <div class="col-3 text-info"><%= l(availability.date) %></div>
    <div class="col-2 text-success"><%= "#{availability.inventory} #{t('available', count: availability.inventory )}" %></div>
    <div class="col-2 text-primary"><%= number_to_currency(@vrental.find_price(availability.date), unit: "â‚¬", separator: ",", delimiter: ".", precision: 2, format: "%n%u") %></div>
    <div class="col-2 text-danger"><%= availability.multiplier < 100 && availability.multiplier > 0 ? "#{t('discount')} -#{100 - availability.multiplier}%" : '' %></div>
    <div class="col-2"><%= availability.override %></div>
    <div class="col-1">
      <%= link_to edit_vrental_availability_path(@vrental, availability), class: "text-info" do %>
        <i class="fas fa-solid fa-edit"></i>
      <% end %>
    </div>
  </div>
<% end %>
