<%= simple_form_for [@statement, @vrowner_payment] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs row">
    <div class="col border border-1 rounded d-flex flex-column justify-content-end">
      <%= f.input :amount, input_html: { value: f.object.amount || @statement.net_income_owner } %>
      <%= f.input :date, as: :string, input_html: { class: "datepicker", value: f.object.date || Date.today }%>
      <%= f.input :description, as: :select, collection: VrownerPayment::PAYMENT_METHODS.map { |method| [t("#{method}"), method]}, selected: t("payment_methods.transfer") %>
    </div>
  </div>
  <div class="form-actions text-end mb-5">
    <%= f.button :submit, t('global.forms.continue'), class: 'btn btn-secondary text-center' %>
  </div>
<% end %>
