<div class="property-sidebar side_stiky">
  <div class="sider_blocks_wrap">
    <div class="side-booking-header d-flex flex-column align-items-center">
      <div class="d-flex justify-content-center">
        <h3 class="prt-price-fix text-secondary text-decoration-line-through me-3 <%= 'd-none' unless @discount.to_i > 5 %>" id="<%= @vrental.id %>-rate-price"><%= number_to_currency(@rate_price, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u") %></h3>
        <h3 class="prt-price-fix text-primary" id="<%= @vrental.id %>-price">
          <%= number_to_currency(@price, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u") %>
        </h3>
      </div>
      <span id="<%= @vrental.id %>-not-available" class="<%= 'd-none' unless @not_available.present? %>"><%= t("not_available") %></span>
      <% if @price && @price_with_coupon %>
        <div class="text-secondary"><%= t('price_with_coupon') %> <span class="text-success"><%= @coupon_code %></span></div>
        <h3 class="prt-price-fix text-success">
          <%= number_to_currency(@price_with_coupon, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u") %>
        </h3>
      <% end %>
    </div>
    <div class="sidetab-content mb-2">
      <div class="side-booking-body">
        <%= form_with url: confirm_booking_path, data: { controller: 'search' }, method: :get, 'data-turbo-cache': false do |form| %>
          <%= form.hidden_field :num_adults, value: @guests, data: { search_target: "numAdult" } %>
          <%= form.hidden_field :vrental_id, value: @vrental.id, data: { search_target: "vrentalId" } %>
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
              <div class="form-group">
                <label for="check_in">Check In</label>
                <div class="cld-box">
                  <i class="fa-solid fa-calendar-week"></i>
                  <%= form.text_field :check_in,
                                  as: :string,
                                  data: { search_target: "checkin", action: "change->search#updatePrice" },
                                  class: "form-control",
                                  placeholder: "Check-in",
                                  value: "#{@checkin.presence}"
                  %>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
              <div class="form-group">
                <label for="check_out">Check Out</label>
                <div class="cld-box">
                  <i class="fa-solid fa-calendar-week"></i>
                  <%= form.text_field :check_out,
                                  as: :string,
                                  data: { search_target: "checkout", action: "change->search#updatePrice"  },
                                  class: "form-control",
                                  placeholder: "Check-out",
                                  value: "#{@checkout.presence}"
                  %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-12 col-md-12 col-sm-12 <%= 'd-none' if @not_available %>" id="<%= @vrental.id %>-book-now">
            <div class="stbooking-footer mt-1">
              <div class="form-group mb-0 pb-0">
                <%= button_tag t("book_now"), class: "btn btn-primary fw-medium full-width", data: { turbo: false } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
