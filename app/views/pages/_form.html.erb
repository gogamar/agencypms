<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :page_type, prompt: 'Seleccionar el tipus de pÃ gina', collection: Page.page_type_options.map { |key, value| [value, key.to_s] } %>
    <%= f.input :video, as: :file %>
    <%= f.input :image, as: :file %>
    <%= f.input :title_es %>
    <%= f.input :title_ca %>
    <%= f.input :title_en %>
    <%= f.input :title_fr %>
  </div>
  <div class="form-actions mb-3">
    <%= f.button :submit, value: t("save"), class: "btn btn-secondary btn-md rounded full-width" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, value: t("save-translations"), class: "btn btn-secondary btn-md rounded full-width" %>
  </div>
<% end %>
