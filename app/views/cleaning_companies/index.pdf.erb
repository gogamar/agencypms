<h6 class="mb-3"><%= t('add_cleaning_company') %></h6>
<%= turbo_frame_tag "new_cleaning_company", src: new_cleaning_company_path %>
<hr>
<h6 class="mb-3"><%= t('cleaning_companies') %></h6>
<div class="row py-2 rate-dates border-bottom fw-bold">
  <div class="col-md-2 col"><%= t('office') %></div>
  <div class="col-md-4 col"><%= t('name') %></div>
  <div class="col-md-2 col"><%= t('number_of_cleaners') %></div>
  <div class="col-md-3 col"><%= t('cost_per_hour') %></div>
  <div class="col-md-1 col"></div>
</div>
<% @cleaning_companies.each do |cleaning_company| %>
  <div class="row py-2 rate-dates border-bottom d-flex align-items-end">
    <div class="col-md-2"><%= cleaning_company.office.name %></div>
    <div class="col-md-4"><%= cleaning_company.name %></div>
    <div class="col-md-2"><%= cleaning_company.number_of_cleaners %></div>
    <div class="col-md-3"><%= number_to_currency((cleaning_company.cost_per_hour), unit: "â‚¬", separator: ",", delimiter: ".", precision: 2, format: "%n%u")%></div>
    <div class="col-md-1">
      <%= link_to edit_cleaning_company_path(cleaning_company), class: "btn btn-sm btn-info" do %>
        <i class="fas fa-pen fa-sm"></i>
      <% end %>
    </div>
  </div>
<% end %>
