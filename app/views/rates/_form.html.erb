<%= simple_form_for [vrental, rate], data: {turbo_frame: rate}, class: "text-sm" do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div
  class="d-flex flex-lg-row flex-sm-column justify-content-between align-items-center rate-dates"
  data-controller="unavailable-dates"
  data-defaultstart="<%= f.object.persisted? ? '' : @vrental.default_checkin.to_json %>"
  data-unavailable="<%= @vrental.dates_with_rates(f.object.firstnight, f.object.lastnight).to_json %>"
  >
    <div class="p-1 text-center">
      <%= f.input :firstnight, as: :string, required: true, input_html: { "data-unavailable-dates-target" => "start" } %>
    </div>
    <div class="p-1 text-center">
      <%= f.input :lastnight, as: :string, required: true, input_html: { "data-unavailable-dates-target" => "end" } %>
    </div>
    <div class="p-1 text-center">
      <%= f.input :arrival_day, label: t("arrival_day"), priority: [t("everyday"), "everyday"], collection: [[t("everyday"), "everyday"], [t("saturdays"), "saturdays"]], include_blank: false %>
    </div>
    <div class="p-1 text-center">
      <%= f.input :min_stay %>
    </div>
    <div class="p-1 text-center">
      <% if vrental.price_per == "week" %>
        <%= f.input :priceweek %>
      <% elsif vrental.price_per == "night" %>
        <%= f.input :pricenight %>
      <% end %>
    </div>
    <div class="p-1 text-center">
      <%= f.button :submit, t('global.forms.submit'), class: 'btn btn-sm btn-primary mt-3' %>
    </div>
  </div>
<% end %>
