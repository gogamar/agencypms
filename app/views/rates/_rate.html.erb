<%= turbo_frame_tag rate, class: "card-body" do %>
  <div class="row">
    <div class="col"><%= l(rate.firstnight, format: :long) %></div>
    <div class="col"><%= l(rate.lastnight, format: :long) %></div>
    <div class="col"><%= rate.min_stay %></div>
    <div class="col"><%= t("#{rate.arrival_day}") %></div>
    <div class="col"><%= number_to_currency(rate.priceweek, unit: "â‚¬", separator: ",", delimiter: ".", precision: 2).delete(' ') %></div>
    <div class="col"><%= link_to "Modificar", edit_vrental_rate_path(@vrental, rate), class: "btn btn-info" %></div>
    <div class="col"><%= link_to "Esborrar", rate, class: "text-danger", data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar aquesta tarifa?"} %></div>
  </div>
<% end %>
