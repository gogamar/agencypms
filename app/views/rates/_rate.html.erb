<%= turbo_frame_tag rate, class: "card-body" do %>
  <div class="d-flex flex-lg-row flex-sm-column justify-content-between border align-items-center">
    <div class="p-1 text-center"><%= l(rate.firstnight, format: :long) %></div>
    <div class="p-1 text-center"><%= l(rate.lastnight, format: :long) %></div>
    <div class="p-1 text-center"><%= rate.min_stay %></div>
    <div class="p-1 text-center"><%= t("#{rate.arrival_day}") %></div>
    <div class="p-1 text-center"><%= number_to_currency(rate.priceweek, unit: "â‚¬", separator: ",", delimiter: ".", precision: 2).delete(' ') %></div>
    <div class="p-1 text-center">
      <%= link_to edit_vrental_rate_path(@vrental, rate), class: "btn btn-info" do %>
        <i class="fas fa-pen fa-sm"></i>
      <% end %>
    </div>
    <div class="p-1 text-center">
      <%= link_to rate, class: "text-danger", data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar aquesta tarifa?"} do %>
        <i class="fas fa-trash-can fa-sm"></i>
      <% end %>
    </div>
  </div>
<% end %>
