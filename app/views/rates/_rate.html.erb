<%= turbo_frame_tag rate, class: "card-body" do %>
  <div class="row py-1 rate-dates">
    <% unless params[:controller] == 'vragreements' %>
      <div class="col-lg-1 nowrap <%= 'text-danger' if rate.restriction == "gap_fill" %>"><%= t(rate.restriction) %></div>
    <% end %>
    <div class="col-lg-2 nowrap <%= 'text-danger' if rate.restriction == "gap_fill" %>""><%= l(rate.firstnight, format: :standard) %></div>
    <div class="col-lg-2 nowrap <%= 'text-danger' if rate.restriction == "gap_fill" %>""><%= l(rate.lastnight, format: :standard) %> </div>
    <div class="col-lg-2 nowrap <%= 'text-danger' if rate.restriction == "gap_fill" %>""><%= t("#{rate.arrival_day}") %></div>
    <div class="col-lg-1 nowrap <%= 'text-danger' if rate.restriction == "gap_fill" %>""><%= rate.min_stay %></div>
    <div class="col-lg-1 nowrap <%= 'text-danger' if rate.restriction == "gap_fill" %>""><%= rate.max_stay == 365 ? '' : rate.max_stay %></div>
    <div class="col-lg-2 nowrap <%= 'text-danger' if rate.restriction == "gap_fill" %>"">
      <% if rate.vrental.price_per == "week" && rate.priceweek %>
        <%= number_to_currency(rate.priceweek, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u")%>/<%= t('week').downcase %>
      <% elsif rate.vrental.price_per == "night" && rate.pricenight || rate.restriction == "gap_fill" %>
        <%= number_to_currency(rate.pricenight, unit: "€", separator: ",", delimiter: ".", precision: 2, format: "%n%u")%>/<%= t('night', count: 1).downcase %>
      <% end %>
    </div>
    <% unless params[:controller] == 'vragreements' %>
      <div class="col-lg-1 p-1 d-flex justify-content-between">
        <%= link_to edit_vrental_rate_path(@vrental, rate), class: "btn btn-sm btn-info" do %>
          <i class="fas fa-pen fa-sm"></i>
        <% end %>
        <%= link_to rate, data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar aquesta tarifa?"}, class: "btn btn-sm btn-danger" do %>
          <i class="fas fa-trash-can fa-sm"></i>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
