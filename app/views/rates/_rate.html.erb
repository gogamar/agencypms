<%= turbo_frame_tag rate do %>
  <div class="row d-flex justify-content-around align-items-center">
    <div class="col text-nowrap w-25"><%= l(rate.firstnight, format: :long) %></div>
    <div class="col text-nowrap w-25"><%= l(rate.lastnight, format: :long) %></div>
    <div class="col text-nowrap w-25"><%= rate.min_stay %></div>
    <div class="col text-nowrap w-25"><%= t("#{rate.arrival_day}") %></div>
    <div class="col text-nowrap w-25"><%= number_to_currency(rate.priceweek, unit: "â‚¬", separator: ",", delimiter: ".", precision: 2).delete(' ') %></div>
    <%# if action_name != "show" %>
    <div class="col">
        <%= link_to "Modificar", edit_vrental_rate_path(@vrental, rate), class: "btn btn-back" %>
    </div>
    <div class="col">
        <%= link_to "Esborrar", rate, class: "text-warning", data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar aquesta tarifa?"}
%>
    </div>
    <%# end %>
  </div>
<% end %>
