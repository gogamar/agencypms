<%= turbo_frame_tag rate, class: "card-body" do %>
  <div class="row py-1">
    <div class="col-lg-3 nowrap"><%= l(rate.firstnight, format: :standard) %></div>
    <div class="col-lg-3 nowrap"><%= l(rate.lastnight, format: :standard) %> </div>
    <div class="col-lg-1 nowrap"><%= rate.min_stay %></div>
    <div class="col-lg-2 nowrap"><%= t("#{rate.arrival_day}") %></div>
    <div class="col-lg-1 nowrap"><%= number_to_currency(rate.priceweek, unit: "â‚¬", separator: ",", delimiter: ".", precision: 2).delete(' ') %></div>
    <% unless params[:controller] == 'vragreements' %>
      <div class="col-lg-2 nowrap d-flex justify-content-between">
        <%= link_to edit_vrental_rate_path(@vrental, rate), class: "btn btn-info" do %>
          <i class="fas fa-pen fa-sm"></i>
        <% end %>
        <%= link_to rate, data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar aquesta tarifa?"}, class: "btn btn-danger" do %>
          <i class="fas fa-trash-can fa-sm"></i>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
