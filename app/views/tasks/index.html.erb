<p id="notice"><%= notice %></p>
<div class="container">
  <div class="d-flex justify-content-between">
    <%= link_to root_path, class: "btn btn-light btn-icon-split me-3" do %>
      <span class="icon text-white-600">
          <i class="fas fa-arrow-left"></i>
      </span>
      <span class="text m-0 text-primary" style="font-size: 0.85rem">
        Tornar
      </span>
    <% end %>
  </div>
  <div class="d-flex justify-content-between my-4">
    <h4 class="font-weight-bold text-primary">Totes les cites</h4>
    <div data-controller="spinner">
      <div data-spinner-target="wheel">
      </div>
      <%= button_to 'Imprimir', tasks_path(format: :pdf), class: "btn btn-primary", data: { "spinner-target" => "printbutton", "action" => "click->spinner#spin"}  %>
    </div>

  </div>
  <div class="card shadow mb-4 p-4">
    <% if @tasks.exists? %>
      <div id="tasks">
        <%= render @tasks %>
      </div>
    <% else %>
      <p>Actualment no tens cites guardades.</p>
    <% end %>
  </div>
</div>
