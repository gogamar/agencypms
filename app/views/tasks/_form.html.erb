
<%= simple_form_for task do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs" data-controller="tasks" data-unavailable="<%= @unavailable_times.to_json %>">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :start_time, as: :string, required: true, input_html: { "data-tasks-target" => "start" }%>
    <%= f.input :end_time, as: :string, required: true, input_html: { "data-tasks-target" => "end" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('global.forms.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
