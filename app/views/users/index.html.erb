<% @users.each do |user| %>
  <div class="container">
    <div class="d-md-flex justify-content-between gap-3">
      <div><%= link_to user.email, user, class: "col" %></div>
      <div><%= t('registered') %> <%= l(user.created_at, format: :short) %></div>
      <div><%= t(user.role) %></div>
      <%= form_for user, url: user_path(user), html: {class: "d-md-flex align-items-center gap-3"}, method: :patch do |f| %>
        <div class="form-check">
          <%= f.check_box :approved, { class: "form-check-input" } %>
          <%= f.label :approved, t('approved'), class: "form-check-label" %>
        </div>
        <%= f.submit t('update'), class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </div>
<% end %>
