
<div class="container-fluid my-3">
  <div class="mb-3">
    <%= link_to root_path, class: "btn btn-light btn-icon-split me-3" do %>
      <span class="icon text-white-600">
        <i class="fas fa-arrow-left"></i>
      </span>
      <span class="text m-0 text-primary" style="font-size: 0.85rem">
        <%= t("devise.shared.links.back") %>
      </span>
    <% end %>
  </div>
  <h4>Autoritzar usuaris</h4>
  <div class="row border border-top border-bottom fw-bold bg-light">
    <div class="col col-lg-4 py-3 border-start border-end">
      Email
    </div>
    <div class="col col-lg-4 py-3 border-start border-end">
      Estatus
    </div>
    <div class="col col-lg-4 py-3 border-start border-end">
      Editar
    </div>
  </div>
  <div>
  <% @users.each do |user| %>
    <div class="row border">
      <div class="col-lg-4 border-start border-end">
        <%= user.email %>
      </div>
      <div class="col-lg-4 border-start border-end">
        <% if user.approved %>
          Autoritzat
        <% else %>
          No autoritzat
        <% end %>
      </div>
      <div class="col-lg-4 border-start border-end">
        <%= link_to "Editar", edit_user_path(user) %>
      </div>
    </div>
  <% end %>
  </div>
</div>
