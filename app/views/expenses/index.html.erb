<h1>Despeses <%= @vrental.name if @vrental %></h1>
<div class="my-3">
  <% if @vrental %>
    <%= link_to new_vrental_expense_path(@vrental), class: "btn btn-primary" do %>
      <i class="fas fa-plus fa-sm"></i>
      <span class="text">Nova despesa per <%= @vrental.name %></span>
    <% end %>
  <% else %>
    <%= link_to new_expense_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus fa-sm"></i>
      <span class="text">Nova despesa</span>
    <% end %>
  <% end %>
</div>
<div class="my-3">
  <p>Total: <%= number_to_currency(@total_price, unit: "€", separator: ",", delimiter: ".", precision: 2) %></p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Immoble</th>
        <th scope="col">Refèrencia</th>
        <th scope="col">Tipus despesa</th>
        <th scope="col">Concepte</th>
        <th scope="col">Proveïdor</th>
        <th scope="col">Import</th>
        <th scope="col">Editar</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <th scope="row"><%= expense.vrental.name %></th>
          <td><%= expense.expense_number %></td>
          <td><%= expense.expense_type %></td>
          <td><%= expense.description %></td>
          <td><%= expense.expense_company %></td>
          <td><%= number_to_currency(expense.amount, unit: "€", separator: ",", delimiter: ".", precision: 2) %></td>
          <td>
            <%= link_to edit_vrental_expense_path(vrental_id: expense.vrental_id, id: expense.id), class: "btn btn-info" do %>
              <i class="fas fa-pen fa-sm"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
