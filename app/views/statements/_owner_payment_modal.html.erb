<div class="modal fade" id="ownerPayment<%= statement.id %><%= owner_payment.persisted? ? owner_payment.id : '' %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ownerPaymentLabel"><%= owner_payment.persisted? ? "Modificar pagament" : "Afegir pagament" %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex flex-column justify-content-between align-items-center">
          <h5 class="text-primary"><%= statement.vrental.name %></h5>
          <h6>Liquidaci√≥: <%= "#{l(statement.start_date)} - #{l(statement.end_date)}" %></h6>
        </div>
        <%= render "owner_payments/form", statement: statement, owner_payment: owner_payment, pending_payment: pending_payment %>
      </div>
    </div>
  </div>
</div>
