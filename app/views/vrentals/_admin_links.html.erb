<%= link_to edit_vrental_path(vrental), data: { bs_toggle: "tooltip", bs_placement: "top" }, title: t("edit_vrental") do %>
  <i class="fa-solid fa-pen-to-square"></i>
<% end %>
<%= link_to copy_vrental_path(vrental), data: { bs_toggle: "tooltip", bs_placement: "top", turbo_method: :copy, turbo_confirm: "Segur que vols copiar #{vrental.name}?"}, title: t("copy_vrental") do %>
  <i class="fa-solid fa-copy"></i>
<% end %>
<%= link_to vrental, class: "text-danger text-decoration-none",  data: { bs_toggle: "tooltip", bs_placement: "top", turbo_method: :delete, turbo_confirm: "Segur que vols esborrar #{vrental.name}?"}, title: t("delete_vrental")  do %>
  <i class="fas fa-trash-can"></i>
<% end %>
<% if vrental.status == "active" %>
  <a type="button" data-toggle-featured-target="toggleButton" data-action="click->toggle-featured#toggleFeatured" data-url="<%= toggle_featured_vrental_path(vrental) %>" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= vrental.featured ? t('remove_featured') : t('set_featured') %>">
    <i data-toggle-featured-target="icon" class="fa-solid fa-star <%= "text-warning" if vrental.featured %>"></i>
  </a>
<% end %>
