<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h4 class="font-weight-bold text-primary text-center mb-2">Immoble turístic</h4>
    <h6 class="text-center">Pas 2. Característiques</h6>
    <hr>
    <%= simple_form_for @vrental do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.hidden_field :request_context, value: 'add_features' %>
      <%= f.input :feature_ids, as: :check_boxes, collection: Feature.all.uniq.map {|f| [t("#{f.name}"), f.id]}.sort_by{|translation| translation}, wrapper: :horizontal_collection %>
      <div class="form-actions text-end mb-5">
        <%= f.button :submit, t('global.forms.continue'), class: 'btn btn-secondary text-center' %>
      </div>
    <% end %>
  </div>
</div>
