<h4 class="font-weight-bold text-primary text-center py-2">Immobles lloguer turístic - HUTs</h4>
<hr>
<div class="container d-flex justify-content-center mt-5">
  <%= form_with url: list_vrentals_path, method: :get, data: { turbo_frame: "vrentals"}, class: "row g-3" do |form| %>
    <div class="col-lg-3 col-md-6 col-sm-12 order-lg-3 order-md-2 col-sm-6 pe-0">
      <div class="shorting-right">
        <div class="shorting-by border rounded">
          <select name="status" id="filter-status" class="form-control">
            <option value=""><%= t('show-all').capitalize %></option>
            <option value="active"><%= t("active") %></option>
            <option value="proposal"><%= t("proposal") %></option>
            <option value="inactive"><%= t("inactive") %></option>
          </select>
        </div>
      </div>
    </div>
    <div class="col-auto">
      <%= form.text_field :name,
          placeholder: "Buscar per nom immoble",
          class: "form-control bg-white border-0 small",
          autocomplete: "on" %>
    </div>
    <div class="col-auto">
      <%= form.button class: "btn btn-primary me-3" do %>
        <i class="fas fa-search fa-sm"></i>
      <% end %>
    </div>
    <div class="col-auto">
      <%= link_to "Veure tots els immobles", vrentals_path, class: "btn btn-secondary" %>
    </div>
    <div class="col-auto">
      <%= link_to new_vrental_path, class: "btn btn-light btn-icon-split" do %>
        <span class="icon text-white-600">
          <i class="fas fa-plus"></i>
        </span>
        <span class="text">
          Afegir immoble nou
        </span>
      <% end %>
    </div>
  <% end %>
</div>
<%= turbo_frame_tag "vrentals", class: "card-body" do %>
  <div class="container-fluid my-3 type--fine-print">
    <div class="row border border-top border-bottom fw-bold bg-light">
      <div class="col col-lg-2 py-3 align-self-center" id="vrstatus" relative>
        <%= sort_indicator if params[:column] == "status" %>
        <%= sort_link(column: "status", label: "Estatus") %>
      </div>
      <div class="col-lg-2 py-3 align-self-center" id="vrname" relative>
        <%= sort_indicator if params[:column] == "name" %>
        <%= sort_link(column: "name", label: "Nom") %>
      </div>
      <div class="col-lg-3 py-3 align-self-center" id="vraddress" relative>
        <%= sort_indicator if params[:column] == "address" %>
        <%= sort_link(column: "address", label: "Adreça") %>
      </div>
      <div class="col-lg-2 py-3 align-self-center" id="owner-name" relative>
        <%= sort_indicator if params[:column] == "owners.fullname" %>
        <%= sort_link(column: "owners.fullname", label: "Propietari") %>
      </div>
      <div class="col-lg-2 py-3 align-self-center" relative>
        Contracte
      </div>
    </div>
    <div>
      <%= render @vrentals %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
