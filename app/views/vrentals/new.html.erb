<h4 class="font-weight-bold text-primary text-center mb-2"><%= t("vacation_rental") %></h4>
<h6 class="text-center"><%= t("new_vrental_step_1") %></h6>
<%= simple_form_for @vrental, html: { "data-controller": "update-field" } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= render "form_inputs", f: f %>
  <div class="form-actions text-end mb-5">
    <%= f.button :submit, t('global.forms.continue'), class: 'btn btn-secondary text-center' %>
  </div>
<% end %>
