<%= simple_form_for @vrental do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :feature_ids, as: :check_boxes, collection: Feature.all.map {|f| [t("#{f.name}"),f.id]}.sort_by{|translation| translation}, wrapper: :horizontal_collection %>
    <div class="d-flex justify-content-between align-items-center">
      <div class="w-50 me-3">
      <%= f.association :vrowner, label_method: :fullname %>
      </div>
      <div class="w-50">
      o <%= link_to 'Afegir un propietari nou', new_vrowner_path, target: "_blank" %>
      </div>
    </div>
    <%= f.input :status, as: :radio_buttons, collection: [[t("inactive"),'inactive'],[t("proposal"),'proposal'],[t("active"),'active']] %>
    <%= f.input :address %>
    <%= f.input :cadastre %>
    <%= f.input :habitability %>
    <%= f.input :licence %>
    <%= f.input :description, as: :text, :input_html => { class: 'test', :cols => 5, :rows => 5 } %>
  </div>

  <div class="form-actions text-end mb-5">
    <%= f.button :submit, t('global.forms.submit'), class: 'btn btn-primary text-center' %>
  </div>
<% end %>
