
<div class="container">
  <div class="d-flex justify-content-between">
      <div>
        <%= link_to buyers_path, class: "btn btn-light btn-icon-split me-3" do %>
          <span class="icon text-white-600">
              <i class="fas fa-arrow-left"></i>
          </span>
          <span class="text m-0 text-primary" style="font-size: 0.85rem">
            Tornar
          </span>
        <% end %>
      </div>
      <div>
        <%= link_to 'Modificar', edit_buyer_path(@buyer), class: "btn btn-secondary" %> | <%= link_to 'Esborrar', @buyer, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar #{@buyer.fullname}?"} %>
      </div>
  </div>
  <div>
    <h4 class="mt-4 mb-3 font-weight-bold text-primary"><%= @buyer.fullname %></h4>
  </div>
  <div class="card shadow mb-4 p-4">
    <p>
      <strong>Nom i cognoms:</strong>
      <%= @buyer.fullname %>
    </p>
    <p>
      <strong>Idioma:</strong>
      <%= @buyer.language %>
    </p>
    <p>
      <strong>Adreça:</strong>
      <%= @buyer.address %>
    </p>
    <p>
      <strong>Telèfon:</strong>
      <%= @buyer.phone %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @buyer.email %>
    </p>
    <p>
      <strong>DNI:</strong>
      <%= @buyer.document %>
    </p>
    <p>
      <strong>Compte bancari:</strong>
      <%= @buyer.account %>
    </p>
    <p>
      <strong>Banc:</strong>
      <%= @buyer.account_bank %>
  </div>
</div>
