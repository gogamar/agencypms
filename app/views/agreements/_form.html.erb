<div class="container-fluid p-4">
<%= simple_form_for [ agreement ] do |f| %>
  <%# owner rental row %>
    <div class="row justify-content-md-center">
    <div class="col-lg-12">
      <%= f.association :rental, label_method: :address %>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-lg-6">
      <%= f.association :renter, label_method: :fullname, label: 'Inquili', include_blank: true, label: ("Seleccionar inquili o #{link_to 'Afegir inquili nou', new_renter_path, target: "_blank"}.").html_safe %>
    </div>
    <div class="col-lg-6">
      <%= f.association :rentaltemplate, label_method: :title, label: 'Plantilla', include_blank: true, label: ("Seleccionar model de contracte o #{link_to 'Afegir model de contracte nou', new_rentaltemplate_path,  target: "_blank"}.").html_safe %>
    </div>
  </div>
     <%# date and place row %>
  <div class="row justify-content-md-center">
    <div class="col-lg-2">
      <%= f.input :signdate, as: :string, required: true, input_html: {class: "datepicker"}, label: 'Data de la firma' %>
    </div>
    <div class="col-lg-2">
      <%= f.input :place, label: 'Lloc de la firma' %>
    </div>
    <div class="col-lg-2">
      <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"}, label: 'Data inici lloguer'  %>
    </div>
    <div class="col-lg-2">
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"}, label: 'Data fi lloguer'  %>
    </div>
    <div class="col-lg-4">
      <%= f.input :duration, label: 'Durada (ex: UN ANY)' %>
    </div>
  </div>
  <%# price row %>
  <div class="row justify-content-md-center">
    <div class="col-lg-3">
      <%= f.input :price, label: 'Preu (ex: 1000)' %>
    </div>
    <div class="col-lg-6">
      <%= f.input :pricetext, label: 'Preu escrit en lletres (ex: MIL EUROS)' %>
    </div>
    <div class="col-lg-3">
      <%= f.input :deposit, label: 'FianÃ§a (exemple: 1000)'  %>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <%= f.input :contentarea, label: 'Clausula especial', as: :ckeditor, input_html: { ckeditor: { toolbar: 'full' } }, hint: 'Per exemple: El pis s\'entrega amb el mobiliari i equipaments que es descriuen en l\'inventari adjunt.' %>
  </div>
  <div class="row justify-content-md-center">
    <%= f.input :photos, label: 'Fotos', as: :file, input_html: { multiple: true } %>
  </div>
  <div class="form-actions row gx-4">
    <div class="col text-end">
      <div class="p-3">
        <%= f.submit "Desar", class: "btn btn-confirm" %>
      </div>
      <div class="p-3">
      <%= f.submit "Desar com contracte nou", class: "btn btn-navbar" %>
      </div>
    </div>

  </div>
<% end %>
</div>
