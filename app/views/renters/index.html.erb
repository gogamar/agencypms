<p id="notice"><%= notice %></p>

<h1>Inquilins</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom i Cognoms</th>
      <th scope="col">Adreça</th>
      <th scope="col">DNI</th>
      <th scope="col">Compte bancari</th>
      <th scope="col">Més detalls</th>
      <th scope="col">Modificar</th>
      <th scope="col">Esborrar</th>
    </tr>
  </thead>
  <tbody>
    <% @renters.each_with_index do |renter, index| %>
        <tr>
        <th scope="row"> <%= index + 1 %></th>
        <td><%= renter.fullname %></td>
        <td><%= renter.address %></td>
        <td><%= renter.document %></td>
        <td><%= renter.account %></td>
        <td><%= link_to 'Més detalls', renter %></td>
        <td><%= link_to 'Modificar', edit_renter_path(renter) %></td>
        <td><%= link_to 'Esborrar', renter, data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar?"} %></td>
      </tr>
    <% end %>
    </tbody>
</table>

<%= link_to 'Afegir un inquili nou', new_renter_path %>
