
<div class="container">
  <div class="d-flex justify-content-between">
      <div>
        <%= link_to renters_path, class: "btn btn-light btn-icon-split me-3" do %>
          <span class="icon text-white-600">
              <i class="fas fa-arrow-left"></i>
          </span>
          <span class="text m-0 text-primary" style="font-size: 0.85rem">
            Tornar
          </span>
        <% end %>
      </div>
      <div>
        <%= link_to 'Modificar', edit_renter_path(@renter), class: "btn btn-secondary" %> | <%= link_to 'Esborrar', @renter, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Segur que vols esborrar #{@renter.fullname}?"} %>
      </div>
  </div>
  <div>
    <h4 class="mt-4 mb-3 font-weight-bold text-primary"><%= @renter.fullname %></h4>
  </div>
  <div class="card shadow mb-4 p-4">
    <p>
      <strong>Nom i cognoms:</strong>
      <%= @renter.fullname %>
    </p>
    <p>
      <strong>Idioma:</strong>
      <%= @renter.language %>
    </p>
    <p>
      <strong>Adreça:</strong>
      <%= @renter.address %>
    </p>
    <p>
      <strong>Telèfon:</strong>
      <%= @renter.phone %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @renter.email %>
    </p>
    <p>
      <strong>DNI:</strong>
      <%= @renter.document %>
    </p>
    <p>
      <strong>Compte bancari:</strong>
      <%= @renter.account %>
    </p>
    <strong>Propietats:</strong>
    <% @renter.rentals.each do |rental| %>
      <p><%= rental.address %></p>
    <% end %>
  </div>
</div>
