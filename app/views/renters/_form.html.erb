
<%= simple_form_for(@renter) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :fullname %>
    <%= f.input :language %>
    <%= f.input :address %>
    <%= f.input :document %>
    <%= f.input :account %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
